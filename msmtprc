# vim: ft=msmtp

defaults
host smtp.gmail.com
port 587
protocol smtp
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account gmail
from pbrisbin@gmail.com
user pbrisbin@gmail.com
passwordeval get-netrc -o Password -f Name=gmail.com -f Login=pbrisbin@gmail.com

account codeclimate
from pat@codeclimate.com
user pat@codeclimate.com
passwordeval get-netrc -o Password -f Name=codeclimate.com -f Login=pat@codeclimate.com

account default : gmail
