set delete
set edit_headers
set fast_reply
set folder = ~/mail
set include
set realname = "Pat Brisbin"
set reverse_name
set sort = threads
set sort_aux = reverse-last-date-received
set spoolfile = "+gmail/INBOX"
unset record

alternates .*@pbrisbin\.com .*@brisb\.in

auto_view text/html
alternative_order text/plain text/html

color normal black default

mailboxes \
  "+gmail/INBOX" \
  "+gmail/ml-arch" \
  "+gmail/ml-commercial-haskell" \
  "+gmail/ml-vim" \
  "+gmail/ml-web-devel" \
  "+gmail/ml-xmonad" \
  "+gmail/ml-yesod" \
  "+codeclimate/INBOX"

# More vim-like bindings
bind index i  noop
bind index gg first-entry
bind index G  last-entry
bind index N  search-opposite
bind pager i  exit
bind pager q  toggle-quoted
bind pager /  search
bind pager j  next-line
bind pager k  previous-line
bind pager gg top
bind pager G  bottom
bind index,pager \# noop
bind index,pager \& noop
bind index,pager R  group-reply

# Macros
macro index Z "<shell-escape>mbsync --all<enter>" "Sync all"

# GnuPG settings
source /usr/share/doc/mutt/samples/gpg.rc
set pgp_sign_as = CEC8925D
set pgp_use_gpg_agent = yes
set crypt_autosign = yes
set crypt_replyencrypt = yes
my_hdr X-PGP-Key: https://files.pbrisbin.com/public.key

# Load account-specific settings when in those mailboxes
folder-hook gmail/* source ~/.mutt/accounts/gmail
folder-hook codeclimate/* source ~/.mutt/accounts/codeclimate
source ~/.mutt/accounts/gmail
